{% block page %}

  {% assign page_title = 'Verify email address | Create account' %}
  {% assign ribbon = 'ico-user' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-five-sixths desktop-grid-offset-one-sixth">

          <div class="content content-header">

            <h1 class="content-header__title">Lorem ipsum dolor</h1>

            <div class="panel">
              <h2 class="panel__title">Verify email address</h2>
              <p class="panel__copy">Please enter your verification code.</p>
            </div>

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-five-sixths desktop-grid-offset-one-sixth">

          <div class="content content-main">

            <form action="" class="form js-validation">

              <div class="form__item form__item--string-action">
                <label for="ff-text-validate-1" class="form__label">Email verification code <span class="form__label__asterix">*</span></label>
                <input id="ff-text-validate-1" class="form__field form__field--string form__field--string--longer" type="text" name="" value="9d959250-7dbf-4d48-846c-226b73f14304" data-error-message="please enter a code" required />
                <button class="btn btn--primary" type="submit">Verify <span class="ico ico-right"></span></button>
              </div><!--/form__item-->

              <p>
                Not got a verfification code? <a href="#" title="Send New Code">Send New Code</a> or <a href="#" title="Change Email Address">Change Email Address</a>
              </p>

            </form>

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
