{% block page %}

  {% assign page_title = 'Account - Your Profile (Updated)' %}
  {% assign ribbon = 'ico-user' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-five-sixths desktop-grid-offset-one-sixth">

          <div class="content content-header">

            <h1 class="content-header__title">Your account</h1>

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-five-sixths desktop-grid-offset-one-sixth">

          <div class="content content-main">

            <div class="tabs js-tabs">

              <ul class="tabs__list">
                <li><a href="#tab-profile">Profile</a></li>
                <li><a href="#tab-activity">Activity</a></li>
              </ul>

              <div class="tabs__tab" id="tab-profile">

                <div class="panel panel--affirm">
                  <h2 class="panel__title">Profile Updated</h2>
                  <p>Your phone contact details have been updated.</p>
                </div>

                <div class="form">

                  <div class="form__item form__item--string">
                    <dl class="form__item__list">
                      <dt class="form__label">Name</dt>
                      <dd class="form__item__list__field">
                        <div class="form__field form__field--string">
                          Mrs Josephine Longnamerson
                        </div>
                      </dd>
                    </dl>
                  </div><!--/form__item-->

                  <div class="form__item form__item--string">
                    <dl class="form__item__list">
                      <dt class="form__label">Email</dt>
                      <dd class="form__item__list__field">
                        <div class="form__field form__field--string form__field--string--verified">
                          <span class="form__field--string--verified__value">josephine38932@emailaddress.com</span>
                          <span class="form__field--string--verified__message">
                            <span class="ico ico-check icon"></span>
                            <span class="form__field--string--verified__message__inner">Verified</span>
                          </span>
                        </div>
                        <a href="#" class="form__item__list__field__action">Change</a>
                      </dd>
                    </dl>
                  </div><!--/form__item-->

                  <div class="form__item form__item--string">
                    <dl class="form__item__list">
                      <dt class="form__label">Password</dt>
                      <dd class="form__item__list__field">
                        <div class="form__field form__field--string">
                          <span class="form__field--string--verified__value">&bull; &bull; &bull; &bull; &bull; &bull; &bull; &bull; &bull;</span>
                        </div>
                        <a href="#" class="form__item__list__field__action">Change</a>
                      </dd>
                    </dl>
                  </div><!--/form__item-->

                  <div class="form__item form__item--string">
                    <dl class="form__item__list">
                      <dt class="form__label">Address</dt>
                      <dd class="form__item__list__field">
                        <div class="form__field form__field--string form__field--string--verified">
                          <span class="form__field--string--verified__value">
                            <span class="form__field__row">Flat 2</span>
                            <span class="form__field__row">239 Longstreetname Terrace</span>
                            <span class="form__field__row">Bristol BS6 5TP</span>
                          </span>
                          <span class="form__field--string--verified__message">
                            <span class="ico ico-check icon"></span>
                            <span class="form__field--string--verified__message__inner">Verified</span>
                          </span>
                        </div>
                        <a href="#" class="form__item__list__field__action">Update Address</a>
                      </dd>
                    </dl>
                  </div><!--/form__item-->

                  <div class="form__item form__item--string">
                    <dl class="form__item__list">
                      <dt class="form__label">Contact Details</dt>
                      <dd class="form__item__list__field">
                        <div class="form__field form__field--string">
                          <span class="form__field__row">Landline phone: 0117 555 5555</span>
                          <span class="form__field__row">Mobile phone: 07777 777 7777</span>
                        </div>
                        <a href="#" class="form__item__list__field__action">Update Phone Details</a>
                      </dd>
                    </dl>
                  </div><!--/form__item-->

                  <p><a href="#">Deactivate my account</a></p>

                </div>

              </div>

              <div class="tabs__tab" id="tab-activity">

              </div>

            </div><!--/tabs-->

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}