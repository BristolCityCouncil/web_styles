{% block page %}

  {% assign page_title = 'Account - Activity Populated' %}
  {% assign ribbon = 'ico-user' %}

  {% include 'header' %}


  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-full-width">

          <div class="content content-header">

            <h1 class="content-header__title">Your account</h1>

          </div><!--/content-->

          <div class="content content-main">

            <div class="tabs js-tabs">

              <ul class="tabs__list">
                <li><a href="#tab-profile">Profile</a></li>
                <li><a href="#tab-activity" class="tabs__list__activity">Activity</a></li>
              </ul>

              <div class="tabs__tab" id="tab-profile">

              </div>

              <div class="tabs__tab" id="tab-activity">
                {% include 'modules/list-table' %}

                <div class="panel panel--concise">
                  <p><a href="#">Load more</a></p>
                </div>
              </div>

            </div><!--/tabs-->

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
