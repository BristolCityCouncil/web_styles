{% block page %}

  {% assign page_title = 'Change contact details | Account' %}
  {% assign ribbon = 'ico-user' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-five-sixths desktop-grid-offset-one-sixth">

          <div class="content content-header">

            <h1 class="content-header__title">Change contact details</h1>

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-five-sixths desktop-grid-offset-one-sixth">

          <div class="content content-main">

            <form method="post" action="#" class="form js-validation" id="form-4">

              <div class="form__item form__item--string">
                <label class="form__label" for="ff-mobile">Mobile phone</label>
                <input class="form__field form__field--string" type="text" name="" id="ff-mobile" required data-error-message="Please enter a mobile number" />
              </div><!--/form__item-->

              <div class="form__item form__item--string">
                <label class="form__label" for="ff-landline">Landline phone</label>
                <input class="form__field form__field--string" type="text" name="" id="ff-landline" required data-error-message="Please enter a landline number" />
              </div><!--/form__item-->

              <div class="form__actions">
                <button name="" type="submit" class="btn btn--primary">Save changes</button>
              </div>

            </form>

          </div><!--/content-->

        </div><!--/grid-col-->



      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
