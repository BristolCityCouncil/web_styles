{% block page %}

  {% assign page_title = 'Report missed collection: Thank You' %}
  {% assign signed_in = false %}
  {% assign ribbon = 'ico-bin' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-full-width">

          <div class="content content-header">

            {% assign step-header__title = 'Report missed collection' %}
            {% assign step-header__title__step = 'Step 4 of 4' %}
            {% assign step-header__subtitle = 'Thank you' %}
            {% include 'modules/step-header' %}



           <div class="panel panel--bare">
             <div class="panel__copy">
              <p class="level">
                <strong>Your collection references</strong> <small class="smallprint">(Quote these when contacting us)</small>

                <a class="text-right" href="#" title="">Track progress</a>
              </p>
               <p>Brown food waste <strong>#1926934</strong></p>
               <p>Black wheelie bin <strong>#1936132</strong></p>
             </div>
           </div>
           <div class="panel panel--minimal panel--affirm">
             <p class="panel__title--minor">Recollection on:</p>
             <p class="panel__title">Wednesday, 15 January <br>before 5pm</p>
           </div>
           <p>
             Please leave your bins on the street for our crew to collect.
           </p>
           <div class="panel panel--secondary">
             <div class="grid-wrap">
               <div class="grid-col desktop-grid-two-thirds desktop-grid-pad-right">
                 <h2 class="panel__title">Make your next visit quicker and easier</h2>
                 <div class="panel__copy">
                   <p>Just fill in <strong>2 more</strong> pieces of information about yourself in order to create an account that will remember all your details next time you come back.</p>
                 </div>
               </div>
               <div class="grid-col desktop-grid-one-third desktop-grid-content-right">
                 <a href="#" class="btn btn--primary">Create account</a>
               </div>
           </div>


          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
