{% block page %}

  {% assign page_title = 'Report missed collection: Collections that were missed' %}
  {% assign signed_in = false %}
  {% assign ribbon = 'ico-bin' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-full-width">

          <div class="content content-header">

            {% assign step-header__title = 'Report missed collection' %}
            {% assign step-header__title__step = 'Step 1 of 4' %}
            {% assign step-header__subtitle = 'Find your address' %}
            {% include 'modules/step-header' %}

            <div class="address-lookup js-address-lookup">

              <div class="form__item form__item--string-action">
                <label class="form__label">Postcode</label>
                <input class="form__field form__field--string" type="text" name="" value="BS6 5AA" />
                <button class="btn btn--secondary btn--small" type="submit">Find address</button>
              </div><!--/form__item-->

              <div class="form__item form__item--select">
                <select name="" class="form__field form__field--select form__field--selectsize" size="3">
                  <option selected="selected">Please select...</option>
                  <option>19 Redland Road, Bristol, BS6 5AA</option>
                  <option>20 Redland Road, Bristol, BS6 5AA</option>
                  <option>31 Redland Road, Bristol, BS6 5AA</option>
                </select>
              </div>

              <div class="basket__actions">
                <button class="btn btn-primary" type="submit">Next: Your recent collections</button>
              </div><!--/basket__actions-->
            </div>


          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
