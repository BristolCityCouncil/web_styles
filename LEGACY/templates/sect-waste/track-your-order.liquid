{% block page %}

  {% assign page_title = 'Track your order' %}
  {% assign signed_in = true %}
  {% assign ribbon = 'ico-bin' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-two-thirds">

          <div class="content content-header">

            <h1 class="content-header__title">Track your order</h1>

          </div><!--/content-->

          <div class="content content-main">

            <form class="form" id="form-track-your-order" action="#form-track-your-order" method="post">

              <div class="form__item form__item--string">
                <label class="form__label" for="ff-reference-number">Reference number</label>
                <input class="form__field form__field--string" type="text" name="" id="ff-reference-number" />
              </div><!--/form__item-->

              <div class="form__item form__item--string">
                <label class="form__label" for="ff-postcode">Postcode</label>
                <input class="form__field form__field--string" type="text" name="" id="ff-postcode" />
              </div><!--/form__item-->

              <div class="form__actions">
                <button class="btn btn--primary" type="submit">Track</button>
              </div><!--/form__actions-->

            </form>

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
