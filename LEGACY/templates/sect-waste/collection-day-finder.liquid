{% block page %}

  {% assign page_title = 'Your bin collection day' %}
  {% assign ribbon = 'ico-bin' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-full-width">

          <div class="content content-header">

            <h1 class="content-header__title">Your bin collection day</h1>

          </div><!--/content-->

          <div class="content content-main">

            <div class="panel-group">
              <div class="panel panel--bare">
                <h2 class="panel__title">Next collection for <strong>22 Queen Square, BS1 4ND</strong> is:</h2>
                <p class="panel__advice"><a href="#">Change address</a></p>
              </div>

              <div class="panel panel--affirm panel--tight">
                <p class="panel__title--minor">Recycling only on</p>
                <p class="panel__title">Wednesday, 15 January</p>
              </div>

              <p>We are also collecting Christmas trees.</p>
            </div>

            <div class="panel panel--collection-complete">
              <p><span class="ico ico-check ico--nudge-down"></span> Collection for <strong>8 January</strong> has been completed.&nbsp;&nbsp;&nbsp;<a href="#" class="midprint">Report a missed collection</a></p>
            </div>

            <h2 class="gamma">Upcoming regular collections</h2>

            <ul class="date-card-list">
              {% assign date-card-type = 'date-card--recycling' %}
              {% include 'modules/date-card' %}

              {% assign date-card-type = 'date-card--bulky' %}
              {% include 'modules/date-card' %}

              {% assign date-card-type = '' %}
              {% include 'modules/date-card' %}

              {% assign date-card-type = 'date-card--recycling' %}
              {% include 'modules/date-card' %}

              {% assign date-card-type = '' %}
              {% include 'modules/date-card' %}
            </ul>
            <div class="page__actions">
              <a href="#" class="btn btn--primary link-download">Download 2014 calendar pdf <span class="ico ico-pdf"></span></a>
            </div>


          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
