{% block page %}

  {% assign page_title = 'Sign in - Reset password instructions' %}
  {% assign ribbon = 'ico-user' %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-two-thirds">

          <div class="content content-header">

            <h1 class="content-header__title">Reset password instructions</h1>

          </div><!--/content-->

          <div class="panel panel--affirm">

            <p>
              Instructions have been sent to <strong>your.name@example.com</strong>. If you don't see an email within 5&nbsp;minutes.
            </p>

            <ol>
              <li>check your spam folders</li>
              <li>ensure your email address is correct</li>
              <li><a href="#" title="request a password reset again">request a password reset again</a></li>
            </ol>

          </div><!--/panel-->

          <div class="page__actions">
            <a class="btn btn--primary" href="#">Sign in</a>
          </div>

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
