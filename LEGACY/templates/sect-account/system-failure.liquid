{% block page %}

  {% assign page_title = 'System failure' %}
  {% assign ribbon = 'ico-user' %}
  {% assign signed_in = false %}
  {% assign hide_breadcrumbs = true %}
  {% assign hide_ribbon = true %}
  {% assign open_am = true %}

  {% include 'header' %}

  <div class="page-content">

    <div class="layout layout-constrained">

      <div class="grid-wrap">

        <div class="grid-col desktop-grid-two-thirds">

          <div class="content content-header">

            <h1 class="content-header__title">System failure</h1>

          </div><!--/content-->

          <div class="panel panel--alert">

            <div class="ico ico-attention ico--large"></div>

            <h2 class="panel__title">We did something wrong and your sign-in failed.</h2>

          </div><!--/panel-->

          <div class="panel panel--alert">
            <div class="panel__copy">
              <div class="ico ico-attention ico--large"></div>
              <p>We did something wrong and your sign-in failed.</p>
            </div>
          </div><!--/panel-->

          <div class="panel panel--alert">

            <div class="ico ico-attention ico--large"></div>

            <div class="panel__copy">
              <h2 class="panel__title">Uh oh</h2>
              <p>We did something wrong and your sign-in failed.</p>
            </div>

          </div><!--/panel-->

          <div class="content content-main">

            <div class="page__actions">
              <p><a href="#">Forgotten your password?</a></p>
            </div>

          </div><!--/content-->

        </div><!--/grid-col-->

      </div><!--/grid-wrap-->

    </div><!--/layout-->

  </div><!--page-content-->

  {% include 'footer' %}

{% endblock %}
